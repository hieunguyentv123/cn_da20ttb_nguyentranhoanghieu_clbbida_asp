@model User;
@{
    ViewData["Title"] = "Cập nhật thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="h4 mb-0">Thông tin cá nhân của tôi</h3><br />
            <a asp-action="ChangePassword" asp-controller="Profile">Đổi mật khẩu</a>&nbsp&nbsp
            <a asp-action="ChangeAvatar" asp-controller="Profile">Cập nhật ảnh đại diện</a>
            <br />
        </div>
        <div class="card-body">
            <div class="row">
                <label class="col-sm-2 form-label">Họ tên: </label>
                <div class="col-sm-10">
                    <p>@Model.Fullname</p>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 form-label">Email: </label>
                <div class="col-sm-10">
                    <p>@Model.Email</p>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 form-label">Số điện thoại: </label>
                <div class="col-sm-10">
                    <p>@Model.Phone</p>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 form-label">Địa chỉ: </label>
                <div class="col-sm-10">
                    <p>@Model.Address</p>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 form-label">Ngày sinh: </label>
                <div class="col-sm-10">
                    <p>@Model.DOB.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            <a asp-action="Edit" asp-controller="Profile"><button class="btn btn-warning" type="reset">Cập nhật</button></a>&nbsp&nbsp
            <a asp-action="Index" asp-controller="Home"><button class="btn btn-primary" type="reset">Trở về trang chủ</button></a>
        </div>
    </div>
</div>

