@model ChangePasswordViewModel;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="h4 mb-0">Đổi mật khẩu</h3>
            <div class="card-close">
                <p class="mb-0 text-danger">* là thông tin bắt buộc</p>
            </div>
        </div>
        <div class="card-body">
            <form class="form-horizontal" asp-action="ChangePassword" asp-controller="Profile" method="POST">
                <div class="row" hidden>
                    <label class="col-sm-2 form-label">Username<small class="text-danger"> *</small></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control mb-3" asp-for="Username" value="@ViewBag.Username" required readonly />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-2 form-label">Nhập mật khẩu cũ<small class="text-danger"> *</small></label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control mb-3" asp-for="OldPassword" required />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-2 form-label">Nhập mật khẩu mới<small class="text-danger"> *</small></label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control mb-3" asp-for="NewPassword" required />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-2 form-label">Xác nhận mật khẩu mới<small class="text-danger"> *</small></label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control mb-3" asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10 ms-auto">
                        <button class="btn btn-warning" type="submit">Lưu thay đổi</button>
                    </div>
                </div>
            </form>
            <a asp-action="Index" asp-controller="Profile"><button class="btn btn-primary" type="reset">Trở về</button></a>
        </div>
    </div>
</div>

