@model ContactInformation;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Thông tin liên hệ";
    ViewData["Action"] = "Chỉnh sửa thông tin liên hệ ";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="h4 mb-0">Chỉnh sửa thông tin liên hệ</h3>
            <div class="card-close">
                <p class="mb-0 text-danger">* là thông tin bắt buộc</p>
            </div>
        </div>
        <div class="card-body">
            <form class="form-horizontal" asp-action="Edit" asp-controller="ContactInformation" method="POST">
                <div class="row" hidden>
                    <label class="col-sm-2 form-label">Mã liên hệ<small class="text-danger"> *</small></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control mb-3" asp-for="ContactInfoId" required />
                        <span asp-validation-for="ContactInfoId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-2 form-label">Số điện thoại<small class="text-danger"> *</small></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control mb-3" asp-for="Phone" required />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-2 form-label">Địa chỉ<small class="text-danger"> *</small></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control mb-3" asp-for="Address" required />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="row" hidden>
                    <label class="col-sm-2 form-label">Trạng thái<small class="text-danger"> *</small></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control mb-3" asp-for="IsDisplay" required />
                        <span asp-validation-for="IsDisplay" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10 ms-auto">
                        <button class="btn btn-warning" type="submit">Lưu thay đổi</button>
                    </div>
                </div>
            </form>
            <a asp-action="Index" asp-controller="ContactInformation"><button class="btn btn-primary" type="reset">Trở về</button></a>
        </div>
    </div>
</div>

