@model Slide;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Slide trang chủ";
    ViewData["Action"] = "Chỉnh sửa ảnh slide";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="h4 mb-0">Chỉnh sửa phương thức thanh toán</h3>
            <div class="card-close">
                <p class="mb-0 text-danger">* là thông tin bắt buộc</p>
            </div>
        </div>
        <div class="card-body">
            <form class="form-horizontal" enctype="multipart/form-data" asp-action="Edit" asp-controller="Slide" method="POST">
                <div class="row" hidden>
                    <label class="col-sm-2 form-label">Mã slide<small class="text-danger"> *</small></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control mb-3" asp-for="SlideId" required />
                        <span asp-validation-for="SlideId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-2 form-label">Ảnh slide hiện tại</label>
                    <div class="col-sm-10 text-center">
                        <img src="@("/uploads/slide/" + @Model.SlidePath)" alt="Chưa có ảnh slide" width="700" height="auto" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <label class="col-sm-2 form-label">Upload ảnh slide</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="SlidePath" class="form-control" hidden />
                        <input type="file" name="img" class="form-control" accept="image/png, image/jpg, image/jpeg" />
                    </div>
                </div>
                <br />
                <div class="row" hidden>
                    <label class="col-sm-2 form-label">Trạng thái<small class="text-danger"> *</small></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control mb-3" asp-for="IsDisplay" required />
                        <span asp-validation-for="IsDisplay" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10 ms-auto">
                        <button class="btn btn-warning" type="submit">Lưu thay đổi</button>
                    </div>
                </div>
            </form>
            <a asp-action="Index" asp-controller="Slide"><button class="btn btn-primary" type="reset">Trở về</button></a>
        </div>
    </div>
</div>

